# Include documentation
include README.md
include requirements.txt

# Include package data files
recursive-include twisstntern/external *
recursive-include twisstntern_simulate/external *

# Include any additional data files
graft images

# Exclude development and test files
prune .git
prune __pycache__
prune *.egg-info
prune venv
prune test_*
prune colormap_demo_test
prune Results
global-exclude *.pyc
global-exclude *~
global-exclude .DS_Store 